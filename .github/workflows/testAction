name: 'Test action'
on:
  schedule:
    - cron: "0 0 * * 0"
  push:
jobs:
  testIdrisAction:
    name: Test setup-idris action 
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@3
      - name: Setup Idris
        uses: sergeyshpadyrev/setup-idris@1
      - name: Check setup
        run: |
          idris -v
          idris2 -v
      - name: Compile program
        run: idris main.idr -O main
      - name: Run compiled program
        run: ./build/exec/main
      
